# 1. Utiliser une image PHP officielle avec Apache
FROM php:8.2-apache

# 2. Installer les dépendances système et les extensions PHP nécessaires pour Laravel
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    zip \
    unzip \
    git \
    curl

RUN docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd

# 3. Activer le module Rewrite d'Apache pour Laravel
RUN a2enmod rewrite

# 4. Configurer le répertoire racine d'Apache sur le dossier /public de Laravel
ENV APACHE_DOCUMENT_ROOT /var/www/html/public
RUN sed -ri -e 's!/var/www/html!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/sites-available/*.conf
RUN sed -ri -e 's!/var/www/defaults!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/apache2.conf /etc/apache2/conf-available/*.conf

# 5. Installer Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# 6. Copier le code de l'application
COPY . /var/www/html

# 7. Donner les permissions pour le stockage et le cache de Laravel
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 775 /var/www/html/storage /var/www/html/bootstrap/cache

# 8. Exposer le port pour Railway
EXPOSE 80

CMD ["apache2-foreground"]
